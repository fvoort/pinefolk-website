<header>
  <nav>
    <ul>
      <li>
        <a
          {% if page.url == '/' %}
            aria-current="true"
          {% endif %}
          href="{{ "/" | url }}"
        >
          Home
        </a>
      </li>
      <li>
        <a
          {% if page.url == '/regels/' %}
            aria-current="true"
          {% endif %}
          href="{{ "/regels" | url }}"
        >
          Regels
        </a>
      </li>
      <li>
        <a
          {% if page.url contains '/gids/' %}
            aria-current="true"
          {% endif %}
          href="{{ "/gids/lid-worden" | url }}"
        >
          Gids
        </a>
      </li>
      <li><a href="https://patreon.com/pinefolk">Lid worden</a></li>
    </ul>
  </nav>
  <h1>{{ title }}</h1>
  {% if description != blank %}
    <p>{{ description }}</p>
  {% else %}
    <p>{{ global_description }}</p>
  {% endif %}
</header>
